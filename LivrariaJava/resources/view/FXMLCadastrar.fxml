<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!-- Anchor Pane trocado dinamicamente -->
<AnchorPane xmlns="http://javafx.com/javafx/25"
			  xmlns:fx="http://javafx.com/fxml/1"
			  fx:controller="controller.CadastrarController"
			  prefHeight="400.0" prefWidth="600.0">
   <children>
   
      <Label layoutX="151.0" layoutY="14.0" text="Nome" textFill="#ab36a9">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <!-- Input Nome -->
      <TextField layoutX="151.0" layoutY="40.0" prefHeight="25.0" prefWidth="239.0" />
      
      <Label layoutX="151.0" layoutY="79.0" text="Autor" textFill="#ab36a9">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <!-- Input Autor -->
      <TextField layoutX="151.0" layoutY="104.0" prefHeight="25.0" prefWidth="240.0" />
      
      <!-- Btn Voltar -->
      <Button fx:id="btnVoltar" onAction="#goHome" layoutX="249.0" layoutY="135.0" mnemonicParsing="false" text="Voltar" textFill="#570a50">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      
      <!-- Btn Submit -->
      <Button fx:id="btnSubmit" onAction="#goListar" layoutX="153.0" layoutY="135.0" mnemonicParsing="false" text="Confirmar" textFill="#570a50">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      
   </children>
</AnchorPane>
